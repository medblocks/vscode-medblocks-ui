{
  "name": "medblocks-ui",
  "displayName": "Medblocks UI VsCode Extension",
  "description": "Fast path resolution and snippets for Medblocks UI",
  "version": "0.0.37",
  "publisher": "tornadoalert",
  "engines": {
    "vscode": "^1.52.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:templateTree"
  ],
  "main": "./out/main.js",
  "icon": "icon.png",
  "contributes": {
    "viewsWelcome": [
      {
        "view": "templateTree",
        "contents": "No templates folder found. Please add a templates folder and place your web templates inside."
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "package-explorer",
          "title": "Medblocks UI",
          "icon": "media/dep.svg"
        }
      ]
    },
    "views": {
      "package-explorer": [
        {
          "id": "templateTree",
          "name": "Templates",
          "icon": "media/dep.svg",
          "contextualTitle": "Package Explorer"
        }
      ]
    },
    "commands": [
      {
        "command": "templateTree.refreshEntry",
        "title": "Refresh",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        },
        "category": "Medblocks UI"
      },
      {
        "command": "templateTree.copy",
        "title": "Copy Snippet",
        "icon": {
          "light": "resources/light/files.svg",
          "dark": "resources/dark/files.svg"
        },
        "category": "Medblocks UI"
      },
      {
        "command": "templateTree.copyId",
        "title": "Copy ID",
        "category": "Medblocks UI",
        "icon": {
          "light": "resources/light/string.svg",
          "dark": "resources/dark/string.svg"
        }
      },
      {
        "command": "templateTree.copyPath",
        "title": "Copy Path",
        "category": "Medblocks UI"
      },
      {
        "command": "templateTree.copyAql",
        "title": "Copy AQL path",
        "category": "Medblocks UI"
      },
      {
        "command": "templateTree.copyRegex",
        "title": "Copy Regex",
        "category": "Medblocks UI"
      },
      {
        "command": "templateTree.copyContext",
        "title": "Copy Context",
        "category": "Medblocks UI"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "templateTree.copy",
          "when": "false"
        },
        {
          "command": "templateTree.copyId",
          "when": "false"
        },
        {
          "command": "templateTree.copyAql",
          "when": "false"
        },
        {
          "command": "templateTree.copyRegex",
          "when": "false"
        },
        {
          "command": "templateTree.copyPath",
          "when": "false"
        },
        {
          "command": "templateTree.copyContext",
          "when": "false"
        }
      ],
      "view/title": [
        {
          "command": "templateTree.refreshEntry",
          "when": "view == templateTree",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "templateTree.copyId",
          "when": "view == templateTree && viewItem == leaf"
        },
        {
          "command": "templateTree.copy",
          "when": "view == templateTree",
          "group": "inline"
        },
        {
          "command": "templateTree.copyAql",
          "when": "view == templateTree && viewItem == leaf"
        },
        {
          "command": "templateTree.copyPath",
          "when": "view == templateTree && viewItem == leaf"
        },
        {
          "command": "templateTree.copyContext",
          "when": "view == templateTree && viewItem == leaf"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "release": "standard-version -a && git push --follow-tags origin master",
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "build": "npm run esbuild-base -- --sourcemap",
    "watch": "npm run esbuild-base -- --sourcemap --watch"
  },
  "devDependencies": {
    "@types/mkdirp": "^0.5.2",
    "@types/node": "^12.12.0",
    "@types/rimraf": "^2.0.2",
    "@types/vscode": "^1.45.0",
    "@typescript-eslint/eslint-plugin": "^4.16.0",
    "@typescript-eslint/parser": "^4.16.0",
    "esbuild": "^0.13.12",
    "eslint": "^7.21.0",
    "standard-version": "^9.2.0",
    "typescript": "^4.2.2"
  },
  "dependencies": {
    "medblocks-ui": "^0.0.83"
  },
  "repository": {
    "url": "https://github.com/sidharthramesh/vscode-medblocks-ui.git"
  }
}
